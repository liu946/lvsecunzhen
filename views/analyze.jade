            .main
                .title
                    h3
                        | 分析结果
                    .content
                        table
                            each cal in calculateFields
                                tbody
                                    tr
                                        td(colspan="7")
                                            p
                                                strong=cal.namezh
                                    tr
                                        td
                                            | 计算指标
                                        td
                                            | 计算方式
                                        td(colspan="2")
                                            | 计算结果
                                        td
                                            | 评估结果
                                        td
                                            | 评估依据
                                        td
                                            | 备注
                                    each field in cal.fields
                                        tr
                                            td(rowspan=""+ field.fields.length +"")=field.namezh
                                            td=field.fields[0].calinfo
                                            td=field.fields[0].sign
                                            td=field.fields[0].unit
                                            td=field.fields[0].score
                                            td=field.fields[0].reference
                                            td=field.fields[0].comment
                                        !{gettablehtml(field.fields)}                                        

            div(style="clear:both;")